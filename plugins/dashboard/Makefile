.PHONY: help install build-css watch-css clean

# Default target
help:
	@echo "Available targets:"
	@echo "  install    - Install npm dependencies"
	@echo "  build-css  - Build production CSS"
	@echo "  watch-css  - Watch and rebuild CSS on changes"
	@echo "  clean      - Remove generated files"

# Install dependencies
install:
	@echo "ðŸ“¦ Installing dependencies..."
	@npm install

# Build CSS for production (minified)
build-css:
	@echo "ðŸŽ¨ Building CSS for production..."
	@npm run build:css
	@echo "âœ… CSS built to static/css/output.css"

# Watch CSS for development
watch-css:
	@echo "ðŸ‘€ Watching CSS files for changes..."
	@npm run watch:css

# Clean generated files
clean:
	@echo "ðŸ§¹ Cleaning generated files..."
	@rm -f static/css/output.css
	@rm -rf node_modules
	@echo "âœ… Clean complete"
